# Architech Frontend Environment Variables
# Copy this file to .env.local and update values as needed

# API Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_API_GATEWAY_URL=http://localhost:8000/api/v1

# WebSocket Configuration (for real-time simulation updates)
VITE_WS_URL=ws://localhost:8000/ws

# Authentication
VITE_JWT_SECRET=your-jwt-secret-key

# Simulation Engine
VITE_SIMULATION_ENGINE_URL=http://localhost:8080

# Development Configuration
VITE_DEV_MODE=true
VITE_DEBUG_MODE=false

# Analytics & Monitoring (optional)
VITE_ANALYTICS_ENABLED=false
VITE_PERFORMANCE_MONITORING=false

# Feature Flags
VITE_ENABLE_SIMULATION_CANVAS=true
VITE_ENABLE_REAL_TIME_UPDATES=true
VITE_ENABLE_COMPONENT_PALETTE=true

# Third-party Services (if used)
VITE_SENTRY_DSN=
VITE_GOOGLE_ANALYTICS_ID=

# Build Configuration
VITE_BUILD_VERSION=1.0.0
VITE_APP_TITLE=Architech - System Architecture Simulator